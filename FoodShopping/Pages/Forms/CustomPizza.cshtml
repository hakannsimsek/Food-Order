@model FoodShopping.Pages.Forms.CustomPizzaModel
@{
}

 <a class="nav-link text-dark" asp-area="" asp-page="Checkout/Checkout">Checkout</a>
 <div class="text-center container">
     <h1>Create your own pizza!</h1>
     <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 bg-light col-4">
         <input type="text" asp-for="Pizza.PizzaName" placeholder="Give your pizza a name.."/>
         <br />
         <input type="checkbox" asp-for="Pizza.TomatoSauce" placeholder="TomatoSauce"/>Tomato Sauce
         <br />
         <input type="checkbox" asp-for="Pizza.Cheese" placeholder="TomatoSauce"/>Cheese
         <br />
         <input type="checkbox" asp-for="Pizza.Peperoni" placeholder="TomatoSauce"/>Peperoni
         <br />
         <input type="checkbox" asp-for="Pizza.Ham" placeholder="TomatoSauce"/>Ham
         <br />
         <input type="checkbox" asp-for="Pizza.Mushroom" placeholder="TomatoSauce"/>Mushroom
         <br />
         <input type="checkbox" asp-for="Pizza.Tuna" placeholder="TomatoSauce"/>Tuna
         <br />
         <input type="checkbox" asp-for="Pizza.Beef" placeholder="TomatoSauce"/>Beef
         <br />
         <input type="checkbox" asp-for="Pizza.Pineapple" placeholder="TomatoSauce"/>Pineapple
         <br />

         <button class="btn btn-primary mt-1" type="submit">Order my pizza</button>
     </form>
 </div>